<%= form_for @comment do |f| %>
  <%= f.hidden_field :article_id %>
  <p>
    <%= f.label :author, 'Name' %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :url, 'Website URL' %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :content, 'Comment' %><br />
    <%= f.text_area :content, :rows => '12', :cols => 35 %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
